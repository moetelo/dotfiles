# shadows enable

exec xss-lock --transfer-sleep-lock -- sway-lock --nofork

exec nm-applet

floating_modifier $mod

bindsym $mod+Return exec alacritty
bindsym --to-code $mod+Shift+L exec swaylock \
	--screenshots \
	--clock \
	--indicator \
    --ignore-empty-password \
	--indicator-radius 100 \
	--indicator-thickness 7 \
	--effect-blur 7x5 \
	--effect-vignette 0.5:0.5 \
	--ring-color 344d1e\
	--key-hl-color 880033 \
	--line-color 00000000 \
	--inside-color 00000088 \
	--separator-color 00000000 \
	--grace 2 \
	--fade-in 0.2

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym --to-code $mod+h focus left
bindsym --to-code $mod+j focus down
bindsym --to-code $mod+k focus up
bindsym --to-code $mod+l focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym --to-code $mod+v split v

# Layout
bindsym --to-code $mod+f fullscreen toggle
bindsym --to-code $mod+s layout stacking
bindsym --to-code $mod+w layout tabbed
bindsym --to-code $mod+Shift+j layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym --to-code $mod+a focus parent

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym --to-code $mod+Shift+c reload
bindsym --to-code $mod+Shift+e exec swaynag -t warning -m 'Exit Sway?' -B 'Yes, exit sway' 'swaymsg exit' --font="Fira Code Nerd Mono"

mode "resize" {
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym --to-code $mod+r mode "default"
}

input 1133:50503:Logitech_USB_Receiver {
    left_handed disabled
    tap disabled
    natural_scroll disabled
    dwt disabled
    accel_profile "flat"
    pointer_accel -0.5
}

input "type:keyboard" {
    xkb_layout us,ru
    xkb_options grp:alt_shift_toggle,caps:none
    xkb_numlock enabled
}

bindsym --to-code $mod+r mode "resize"

# Custom
bindsym --to-code $mod+e exec nemo
bindsym --to-code $mod+d exec rofi -show drun
bindsym --to-code $mod+Shift+q kill

bindsym --to-code Print exec "grim -o DP-1 - | wl-copy"
bindsym --to-code $mod+Shift+S exec grimshot copy anything

# Screen brightness controls
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 30%+
bindsym --locked XF86MonBrightnessDown exec brightnessctl set 30%-

bindsym --locked $mod+F7 exec brightnessctl -d ddcci7 set 5%-
bindsym --locked $mod+F8 exec brightnessctl -d ddcci7 set 5%+

bindsym --locked $mod+F11 exec brightnessctl set 10%-
bindsym --locked $mod+F12 exec brightnessctl set 10%+

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -2%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +2%

gaps inner 4
gaps outer 4

