#!/usr/bin/env bash

PLAYER=spotify_player

now_playing() {
    status=$(playerctl status --player=$PLAYER)

    if [ "$status" == "" ]; then
        return
    fi

    artist=$(playerctl --player=$PLAYER metadata xesam:artist)
    title=$(playerctl --player=$PLAYER metadata xesam:title)

    if [ "$status" == "Playing" ]; then
        echo "$artist — $title"
    elif [ "$status" == "Paused" ]; then
        echo "▐▐ $artist — $title"
    else
        echo "$status"
    fi
}

now_playing

